@{
    ViewBag.Title = "Clients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">📋 Liste des Clients</h2>
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#clientModal" onclick="clearTextBox();">
            <i class="fa fa-plus"></i> Ajouter un Client
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>CNI</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="tbody"></tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div id="clientModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Header -->
            <div class="modal-header bg-primary text-white">
                <h4 class="modal-title"><i class="fa fa-user-plus"></i> Ajouter un Client</h4>
                <button type="button" class="close text-white" data-dismiss="modal" onclick="Close()">×</button>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <form>
                    <input type="hidden" id="ClientID">

                    <div class="form-group">
                        <label for="Nom">Nom</label>
                        <input type="text" class="form-control" id="Nom" placeholder="Entrez le nom">
                    </div>

                    <div class="form-group">
                        <label for="Prenom">Prénom</label>
                        <input type="text" class="form-control" id="Prenom" placeholder="Entrez le prénom">
                    </div>

                    <div class="form-group">
                        <label for="Email">Email</label>
                        <input type="email" class="form-control" id="Email" placeholder="Entrez l'email">
                    </div>

                    <div class="form-group">
                        <label for="Telephone">Téléphone</label>
                        <input type="text" class="form-control" id="Telephone" placeholder="Entrez le téléphone">
                    </div>

                    <div class="form-group">
                        <label for="CNI">CNI</label>
                        <input type="text" class="form-control" id="CNI" placeholder="Entrez le CNI">
                    </div>
                </form>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <button id="btnAdd" class="btn btn-success" onclick="addClient();">
                    <i class="fa fa-check"></i> Ajouter
                </button>

                <button type="button" id="btnUpdate" class="btn btn-warning" onclick="updateClient();" style="display:none;">
                    <i class="fa fa-edit"></i> Modifier
                </button>

                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="Close()">
                    <i class="fa fa-times"></i> Fermer
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/clientjs")
}
